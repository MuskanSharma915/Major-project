<% layout("/layouts/boilerplate") %>
<body>
  
  <div class="rows mt-3">
    <div class="col-8 offset-2"> 
      <br>
      <h3>Create a New Listing</h3>
  <div class="mb-3">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
      <div class="valid-feedback">
        Looks good!
      </div>
  </div>
  
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" class="form-control" required>
     
    </textarea>
    <div class="invalid-feedback">
      Please choose a description.
    </div>
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Upload Image</label>
    <input name="listing[image]"  type="file" class="form-control" required/>
   </div>

  <div class="row">
  <div class="mb-3  col-md-4">
    <label for="price" class="form-label">Price</label>
    <input name="listing[price]" placeholder="enter price" type="number" class="form-control"/>
    <div class="invalid-feedback">
      Please choose a price.
    </div>
   
  </div>
  <div class="mb-3 col-md-8">
    <label for="country" class="form-label">Country</label>
    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
    <div class="invalid-feedback">
      Please choose a country.
    </div>
  </div>
</div>
  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input class="form-control" name="listing[location]" placeholder="enter location" type="text" required />
    <div class="invalid-feedback">
      Please choose a location.
    </div>
  </div>
  <br>
  <button class="btn btn-dark add-btn mt-3">Add</button>
  <br><br/>
  
  </form>
</div>
</div>
</body>

